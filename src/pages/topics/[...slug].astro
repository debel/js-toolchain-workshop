---
import ArticleLayout from '../../layouts/ArticleLayout.astro';
import ArticleLinks from '../../components/ArticleLinks.astro';
import ArticleNavigation from '../../components/ArticleNavigation.astro';

import { buildCollectionNavigationProps } from '../../helpers.astro';

export async function getStaticPaths() {
  return await buildCollectionNavigationProps('topics');
}

const { article, prev, next } = Astro.props;

const { Content: ArticleContent } = await article.render();
---

<ArticleLayout {...article.data}>
  <ArticleContent />
  <ArticleLinks article={article} />
  <ArticleNavigation prev={prev} next={next} />
</ArticleLayout>

<style is:global>
  hr {
    display: none !important;
  }

  bonus-content {
    font-style: italic;
  }
</style>
